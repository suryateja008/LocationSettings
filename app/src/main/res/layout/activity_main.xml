<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="1.0"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="#F0F8FF"
        android:text="Wifi Scheduler"
        android:background="@drawable/gradient_style1"
        android:textSize="18sp"
        android:id="@+id/addSettingButton"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Edit Settings"
        android:textColor="#F0F8FF"
        android:background="@drawable/gradient_style1"
        android:textSize="18sp"
        android:id="@+id/editSettingButton"
        android:layout_below="@+id/addSettingButton"
        android:layout_alignLeft="@+id/addSettingButton"
        android:layout_alignStart="@+id/addSettingButton"
        android:layout_marginTop="50dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Time Scheduler"
        android:layout_weight=".5"
        android:textColor="#F0F8FF"
        android:background="@drawable/gradient_style1"
        android:textSize="18sp"
        android:id="@+id/scheduleButton"
        android:layout_below="@+id/editSettingButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

</RelativeLayout>
