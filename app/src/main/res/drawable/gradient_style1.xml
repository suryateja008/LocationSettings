<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

<item android:state_pressed="true" >
    <shape>
        <solid
            android:color="#ABE2F7"  />
        <stroke
            android:width="1dp"
            android:color="#F0F8FF" />
        <corners
            android:radius="6dp" />
        <padding
            android:left="10dp"
            android:top="10dp"
            android:right="10dp"
            android:bottom="10dp" />
    </shape>
</item>

<item>
    <shape>
        <gradient
            android:startColor="#D32F2F"
            android:endColor="#D32F2F"
            android:angle="270" />
        <stroke
            android:width="1dp"
            android:color="#ccc"  />
        <corners
            android:radius="10dp" />
        <padding
            android:left="10dp"
            android:top="10dp"
            android:right="10dp"
            android:bottom="10dp" />
    </shape>
</item>


</selector>